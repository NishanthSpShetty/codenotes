{
	"languageserver": {
		"haskell": {
			"command": "hie-wrapper",
			"args": ["--lsp"],
			"rootPatterns": [
				"*.cabal",
				"stack.yaml",
				"cabal.project",
				"package.yaml"
			],
			"filetypes": [
				"hs",
				"lhs",
				"haskell"
			],
			"initializationOptions": {
				"haskell": {}
			},
            "settings":{
                "languageServerHaskell": {
                "hlintOn": true,
                "maxNumberOfProblems": 10,
                "completionSnippetsOn": true
                }
            }
        }
    }
}
